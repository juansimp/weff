<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="@drawable/fondo">
	<TableLayout android:id="@+id/tableLayout1"
		android:layout_height="wrap_content" android:layout_width="match_parent">
		<TableRow android:id="@+id/tableRow1" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/textView1" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Asunto:"
				android:textSize="20dp" android:gravity="left" />
			<EditText android:id="@+id/asuntoText" android:layout_width="wrap_content" android:layout_height="wrap_content">
				<requestFocus></requestFocus>
			</EditText>
		</TableRow>
		<TableRow android:id="@+id/tableRow2" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/textView2" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="DescripciÃ³n:"
				android:textSize="20dp" android:gravity="left" />
			<EditText android:id="@+id/descripcionText" android:layout_width="wrap_content" android:layout_height="wrap_content">
			</EditText>
		</TableRow>
		<TableRow android:id="@+id/tableRow3" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/textView3" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Entre calle:"
				android:textSize="20dp" android:gravity="left" />
			<EditText android:id="@+id/entreCalleText" android:layout_width="wrap_content" android:layout_height="wrap_content">
			</EditText>
		</TableRow>
		<TableRow android:id="@+id/tableRow4" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/textView4" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Y calle:"
				android:textSize="20dp" android:gravity="left" />
			<EditText android:id="@+id/yCalleText" android:layout_width="wrap_content" android:layout_height="wrap_content">
			</EditText>
		</TableRow>
		<TableRow android:id="@+id/tableRow5" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/textView5" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Punto de Referencia:"
				android:textSize="20dp" android:gravity="left" />
			<EditText android:id="@+id/puntoReferenciaText" android:layout_width="wrap_content" android:layout_height="wrap_content">
			</EditText>
		</TableRow>
		
		<TableRow android:id="@+id/tableRow6" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/textView6" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Prioridad:"
				android:textSize="20dp" android:gravity="left" />
				<Spinner android:id="@+id/prioridadSpinner"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
				</Spinner>
		</TableRow>
		<TableRow android:id="@+id/tableRow7" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/textView7" android:layout_height="wrap_content"
				android:text="Lugar fisico" android:textSize="20dp" android:gravity="left"
				android:layout_width="wrap_content" />
			<Spinner android:id="@+id/lugarFisicoSppiner"
				android:layout_height="wrap_content" android:layout_width="fill_parent"></Spinner>
		</TableRow>
		<TableRow android:id="@+id/tableRow8" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/textView8" android:layout_height="wrap_content"
				android:text="Sentido" android:textSize="20dp" android:gravity="left"
				android:layout_width="wrap_content" />
			<Spinner android:id="@+id/sentidoSpinner"
				android:layout_height="wrap_content" android:layout_width="fill_parent"></Spinner>
		</TableRow>
		<TableRow android:id="@+id/tableRow9" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/textView9" android:layout_height="wrap_content"
				android:text="Tramo" android:textSize="20dp" android:gravity="left"
				android:layout_width="wrap_content" />
			<AutoCompleteTextView android:text=""
				android:id="@+id/tramoAutoComplete" android:layout_height="wrap_content"
				android:layout_width="fill_parent"></AutoCompleteTextView>
		</TableRow>
	</TableLayout>
	
	<LinearLayout android:id="@+id/linearLayout1"
		android:layout_height="wrap_content" android:layout_width="match_parent">
		<Button android:id="@+id/button1" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:onClick="cancelar"
			android:text="Cancelar"></Button>
		<Button android="@+id/button1" android:text="Enviar"
			android:layout_height="wrap_content" android:gravity="center"
			android:onClick="enviarTicket" android:layout_width="fill_parent" />
	</LinearLayout>
</LinearLayout>
